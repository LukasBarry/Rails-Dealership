<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<div class="row">
    <% @vehicles.each do |vehicle| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h3><%= vehicle.make %></h3>
         <h3><%= vehicle.label %></h3>
         <p>Year: <%= vehicle.year %></p>
         <p>Miles: <%= vehicle.miles %></p>
         <p><%= vehicle.category %></p>
         <p>$<%= vehicle.price %></p>
         <% if vehicle.avatar_file_name != nil %>
         <%= image_tag vehicle.avatar.url(:medium), class: "img-responsive" %>
         <% end %>
         <div class="btn-group">
          <%= link_to 'Show', vehicle, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-success" %>
          <%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>
